{% block oro_dpd_rates_csv_widget %}
    {% apply spaceless %}
        {{ form_widget(form) }}
        {% set transportId = form.parent.vars.value.id %}
        {% if transportId is not null and form.vars.rates_count is defined and form.vars.rates_count > 0 %}
        <div class="oro_attachment_file">
            <a href="{{ path('oro_dpd_rates_download', {id: transportId}) }}" class="no-hash filename" download>
                {{ form.vars.download_csv_label|trans }}
            </a>
        </div>
        {% endif %}
    {% endapply %}
{% endblock %}

{% block oro_dpd_transport_settings_widget %}
    <div data-page-component-module="orodpd/js/app/components/dpd-transport-settings-component">
        {{ form_widget(form) }}
    </div>
{% endblock %}